<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Serilog.Sinks.Kafka</Title>
        <Authors>Kenny Kropp &lt;kenny@kropp.io&gt;</Authors>
        <Description>A Serilog Sink for writing to Kafka Clusters</Description>
        <Copyright>MIT</Copyright>
        <PackageProjectUrl>https://github.com/kekropp/serilog-sinks-kafka</PackageProjectUrl>
        <RepositoryUrl>https://github.com/kekropp/serilog-sinks-kafka</RepositoryUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Confluent.Kafka" Version="2.1.1" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="Serilog.Sinks.PeriodicBatching" Version="3.1.0" />
        <None Include="docs/README.md" Pack="true" PackagePath="/" />
    </ItemGroup>
</Project>
